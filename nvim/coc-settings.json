{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "args": [
        "serve",
        "-rpc.trace",
        "-debug",
        "localhost:6060",
        "-logfile",
        "/tmp/goplslog"
      ],
      "filetypes": ["go", "gomod"],
      "rootPatterns": ["main.go", "go.mod", "README.md", "LICENSE"],
      "memoryMode": "DegradeClosed",
      "requireRootPattern": true,
      "directoryFilters": ["-vendor", "-manifests"],
      "expandWorkspaceToModule": false,
      "initializationOptions": {
        "deepCompletion": false,
        "usePlaceholders": true,
        "staticcheck": true
      },
      "ignoredRootPaths": ["$HOME/src/github.com/monzo/wearedev/"],
      "disableWorkspaceFolders": true
    }
  },
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "json",
    "go",
    "javascript",
    "scss",
    "javascriptreact",
    "markdown",
    "html",
    "typescript",
    "python"
  ],
  "snippets.ultisnips.directories": ["UltiSnips", "gosnippets/UltiSnips"]
}
